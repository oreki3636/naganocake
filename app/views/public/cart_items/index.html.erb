<h2>ショッピングカート</h2>
<
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
    </tr>
    <tr>
      <th>単価（税込）</th>
    </tr>
    <tr>
      <th>数量</th>
    </tr>
    <tr>
      <th>小計</th>
    </tr>
    <tr>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.get_image(50,50) %></td>
      <td><%= cart_item.item.name %></td>
    </tr>
    <tr>
      <td><%= cart_item.item.taxprice %></td>
    </tr>
    <tr>
      <td class="form-group">
        <%= form_with model: cart_item do |f| %>
        <%= f.hidden_field :item_id, :value => cart_item.id %>
        <%= f.select :amount, *[1..5] %>
        <%= f.submit "変更" %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td><%= cart_item.subtotal %></td>
    </tr>
    <tr>
      <td>
      <%= link_to "削除する",cart_item_path(cart_item.id), method: :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<table class="table">
  <thead>
    <tr>
      <th>合計金額</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <% @total+=cart_item.subtotal %>
    <% end %>
    <tr>
      <td><%= @total %></td>
    </tr>
  </tbody>
</table>

<%= link_to "買い物を続ける" ,items_path %>
<%= link_to "情報入力に進む" ,new_order_path %>

