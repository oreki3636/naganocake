<h2>ショッピングカート</h2>
<%= link_to "カートを空にする",destroy_all_path, method: :delete %>
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.get_image(50,50) %>
          <%= cart_item.item.name %></td>
      <td><%= cart_item.item.taxprice %></td>
      <td class="form-group">
        <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
        <%= f.hidden_field :item_id, :value => cart_item.id %>
        <%= f.select :amount, *[1..5] %>
        <%= f.submit "変更" %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する",cart_item_path(cart_item.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<table class="table">
    <tr>

      <th>合計金額</th>
      <td><% @cart_items.each do |cart_item| %>
          <% @total+=cart_item.subtotal %>
          <% end %>
          <%= @total %></td>
    </tr>
  </tbody>
</table>

<%= link_to "買い物を続ける" ,root_path %>
<% if @cart_items.any? %>
<%= link_to "情報入力に進む" ,new_order_path %>
<% end %>

