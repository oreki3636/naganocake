<div class="container">
  <h1>商品一覧 全<%= @items.count %>件</h1>
  <div class="row">
    <% @items.each do |item| %>
    <div style="width:25%">
      <%= link_to item_path(item.id) do %>
        <%= image_tag item.get_image(100,100) %>
        <% end %><br>
        <%= item.name %><br>
        <%= item.price %><br>
    </div>
    <% end %>
  </div>
</div>