<div class="container">
  <h2>会員情報編集</h2>

  <%= form_with model: @customer, url: mypage_update_path do |f| %>

  <div class="row">
    <div class="col-2">
      氏名
    </div>
    <div class="col-10">
      <%= f.text_field :first_name %>
      <%= f.text_field :last_name %>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      フリガナ
    </div>
    <div class="col-10">
      <%= f.text_field :first_name_kana %>
      <%= f.text_field :last_name_kana %>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      郵便番号
    </div>
    <div class="col-10">
      <%= f.text_field :postal_code %>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      住所
    </div>
    <div class="col-10">
      <%= f.text_field :address %>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      電話番号
    </div>
    <div class="col-10">
      <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      メールアドレス
    </div>
    <div class="col-10">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="row">
    <div class="col-2"></div>
    <div class="col-3">
      <%= f.submit"編集内容を保存", class: "btn btn-success" %>
    </div>
    <div class="col-7">
      <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>