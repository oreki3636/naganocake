<div class="container">
  <div class="row">
    <% if @order.errors.any? %>
      <%= @order.errors.count %>件のエラーが発生しました
      <ul>
        <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="row">
    <div class="col-1"></div>
    <h2>注文情報入力</h2>
  </div>

  <div class="row">
    <h3><strong>支払方法</strong></h3>
  </div>
  <%= form_with model: @order, url: confirm_path ,method: :post do |f| %>
    <div class="row">
      <%= f.radio_button :method_of_payment, "credit_card" %>
      <%= f.label :method_of_payment_credit_card, "クレジットカード" %><br>
    </div>
    <div class="row">
      <%= f.radio_button :method_of_payment, "transfer" %>
      <%= f.label :method_of_payment_transfer, "銀行振込" %>
    </div>

    <div class="row">
      <h3><strong>お届け先</strong></h3>
    </div>
    <div class="row">
      <%= f.radio_button :select_address, "address" %>
      <%= f.label :shipping_address_address, "ご自身の住所" %><br>
    </div>
    <div class="row">
      <%= @customer.postal_code+@customer.address %><br>
      <%= @customer.fullname %>
    </div>

    <div class="row">
      <h3><strong>新しいお届け先</strong></h3>
    </div>
    <div class="row">
      <%= f.radio_button :select_address, "new_adderss" %>
      <%= f.label :shipping_address_new_address, "新しいお届け先" %>
    </div>
    <div class="row">
      <div class="field">
        <%= f.label :郵便番号（ハイフンなし） %>
        <%= f.text_field :shipping_postal_code %>
      </div>
    </div>
    <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :shipping_address %>
    </div>
    <diV class="field">
      <%= f.label :宛名 %>
      <%= f.text_field :shipping_name %>
    </diV>
    <%= f.submit "確認画面へ進む",class: "btn btn-primary" %>
  <% end %>


</div>
