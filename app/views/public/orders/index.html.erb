<h2>注文履歴一覧</h2>
<table class="table">
  <thead>
    <tr>
      <th>注文日</th>
    </tr>
    <tr>
      <th>配送先</th>
    </tr>
    <tr>
      <th>注文商品</th>
    </tr>
    <tr>
      <th>支払金額</th>
    </tr>
    <tr>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
    </tr>
    <tr>
      <td><%= order.shipping_postal_code + order.shipping_address + order.shipping_name %></td>
    </tr>
    <tr>
      <% total = 0 %>
      <td><% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
            <% total += order_detail.item.price * order_detail.quantity %>
          <% end %>
          <%= order.postage+total %>
      </td>
    </tr>
    <tr>
      <%= form_with model: @order do |f| %>
      <th>
        <%= hidden_field :created_at, value => order.created_at %>
        <%= hidden_field :shopping_pastal_code ,value => order.shipping_postal_code %>


      </th>
    </tr>


    <% end %>
  </tbody>
</table>