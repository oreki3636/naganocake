<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <h2>商品一覧</h2>
    </div>
    <div class="col-1">
      <%= link_to "+",new_admin_item_path, class: "btn btn-light" %>
    </div>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <th scope="col">商品ID</th>
        <th scope="col">商品名</th>
        <th scope="col">税抜価格</th>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price %></td>
        </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>