<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-10">
      <h2>商品編集</h2>
    </div>
  </div>
  <%= form_with model: @item,url: admin_item_path(@item.id) do |f| %>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-1">
        商品画像
      </div>
      <div class="col=8">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-1">
        商品名
      </div>
      <div class="col=8">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-1">
        商品説明
      </div>
      <div class="col=8">
        <%= f.text_area :introduction %>
      </div>
    </div>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-1">
        税抜価格
      </div>
      <div class="col=8">
        <%= f.text_field :price %>
      </div>
    </div>

    <div class="row">
      <div class="col-5"></div>
      <div class="col=7">
        <%= f.submit"変更を保存", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
