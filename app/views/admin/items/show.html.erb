<div class="container">
  <h2>商品詳細画面</h2>
  <div class="row">
    <div class="col">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300" %>
        <% else %>
        <p>画像なし</p>
        <% end %>
    </div>
    <div class="col">
      <table class="table">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>税込価格<br>税抜価格</td>
          <td><%= @item.taxprice %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <td><%= link_to "編集する",edit_admin_item_path(@item.id), class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>