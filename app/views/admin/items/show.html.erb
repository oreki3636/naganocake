<h2>商品詳細画面</h2>



<table class="table">
  <tbody>
    <tr>
      <td>
        <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300" %>
        <% else %>
        <p>画像なし</p>
        <% end %>
      </td>

    </tr>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>税込価格<br>税抜価格</td>
      <td><%= @item.taxprice %>(<%= @item.price %>)円</td>
    </tr>
    <tr>
      <td><%= link_to "編集する",edit_admin_item_path(@item.id) %></td>
    </tr>
  </tbody>
</table>