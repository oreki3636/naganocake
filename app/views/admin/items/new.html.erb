<div class="container">
  <% if @item.errors.any? %>
    <%= @item.errors.count %>件のエラーが発生しました
    <ul>
      <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row">
    <div class="col-2"></div>
    <h2>商品新規登録</h2>
  </div>

  <%= form_with model: @item ,url: admin_items_path do |f| %>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-1">
        商品画像
      </div>
      <div class="col-8">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-1">
        商品名
      </div>
      <div class="col-8">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-1">
        商品説明
      </div>
      <div class="col-8">
        <%= f.text_area :introduction %>
      </div>
    </div>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-1">
        税抜価格
      </div>
      <div class="col-8">
        <%= f.text_field :price %>
      </div>
    </div>

    <div class="row">
      <div class="col-5"></div>
        <%= f.submit"新規登録", class: "btn btn-success" %>
    </div>
  <% end %>
</div>