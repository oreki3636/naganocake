<div class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-11">
            <h2>注文履歴一覧</h2>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">購入日時</th>
                    <th scope="col">購入者</th>
                    <th scope="col">注文個数</th>
                </tr>
            </thead>
            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td><%= link_to order.created_at, admin_order_path(order.id) %></td>
                    <td><%= order.customer.fullname %></td>
                        <% total_quantity = 0 %>
                    <td><% order.order_details.each do |order_detail| %>
                        <% total_quantity += order_detail.quantity %>
                        <% end %>
                        <%= total_quantity %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
