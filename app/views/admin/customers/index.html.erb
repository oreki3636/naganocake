<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <h2>会員一覧</h2>
   </div>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">会員ID</th>
          <th scope="col">氏名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.fullname, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td><% if customer.is_deleted %>
                <span>退会</span>
              <% else %>
                <span>有効</span>
              <% end %></td>
         </tr>
         <% end %>
      </tbody>
    </table>
  </div>
</div>

