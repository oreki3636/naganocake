<div class="container">
  <h2><%= @customer.fullname %>さんの会員情報編集</h2>


  <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>

    <div class="row">
      <div class="col-1">
        会員ID
      </div>
      <div class="col-11">
        <%= @customer.id %>
      </div>
    </div>


    <div class="row">
      <div class="col-1">
        氏名
      </div>
      <div class="col-11">
        <%= f.text_field :first_name %>
        <%= f.text_field :last_name %>
      </div>
    </div>

    <div class="row">
      <div class="col-1">
        フリガナ
      </div>
      <div class="col-11">
        <%= f.text_field :first_name_kana %>
        <%= f.text_field :last_name_kana %>
      </div>
    </div>

    <div class="row">
      <div class="col-1">
        郵便番号
      </div>
      <div class="col-9">
         <%= f.text_field :postal_code %>
      </div>
    </div>

    <div class="row">
      <div class="col-1">
        住所
      </div>
      <div class="col-11">
        <%= f.text_field :address %>
      </div>
    </div>

    <div class="row">
      <div class="col-1">
        電話番号
      </div>
      <div class="col-11">
        <%= f.text_field :telephone_number %>
      </div>
    </div>

    <div class="row">
      <div class="col-1">
        メールアドレス
      </div>
      <div class="col-11">
        <%= f.email_field :email %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
      </div>
      <div class="col-9">
        <%= f.submit"変更を保存",class: "btn btn-success" %>
      </div>
    </div>

    <% end %>
</div>
