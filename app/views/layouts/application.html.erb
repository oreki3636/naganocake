<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/714e1a7f58.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
       <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
           <span>naganocake</span>
          </a>
          <buttom class="navbar-toggler" type="button" data-toggle="collapse"
           data-target="#navbarNavDropdown" aria-controls="navbaeNavDropdown" aria-expanded="false"
           aria-lavel="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </buttom>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">

      <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
          <li>
            <%= link_to "マイページ", mypage_path, class: "nav-link text-ligth" %>
          </li>
          <li>
            <%= link_to "商品一覧", items_path, class: "nav-link text-ligth" %>
          </li>
          <li>
            <%= link_to "カート", cart_items_path, class: "nav-link text-ligth" %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_customer_session_path, class: "nav-link text-ligth", method: :delete %>
          </li>
        <% elsif admin_signed_in? %>
          <li>
            <%= link_to "商品一覧", admin_items_path, class: "nav-link text-ligth" %>
          </li>
          <li>
            <%= link_to "会員一覧", admin_customers_path, class: "nav-link text-ligth" %>
          </li>
          <li>
            <%= link_to "注文履歴一覧", admin_root_path, class: "nav-link text-ligth" %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_admin_session_path, class: "nav-link text-ligth" ,method: :delete %>
          </li>
        <% else %>
          <li>
            <%= link_to "About", about_path, class: "nav-link text-ligth" %>
          </li>
          <li>
            <%= link_to "商品一覧",items_path, class: "nav-link text-ligth" %>
          </li>
          <li>
            <%= link_to "新規登録", new_customer_registration_path, class: "nav-link text-ligth" %>
          </li>
          <li>
            <%= link_to "ログイン", customer_session_path, class: "nav-link text-ligth" %>
          </li>
        <% end %>
      </ul>
      </div>
      </div>
    </nav>



    </header>
    <main>
      <br>
      <br>
      <%= yield %>
    </main>
    <footer>

    </footer>

  </body>
</html>
